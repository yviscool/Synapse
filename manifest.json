{
  "manifest_version": 3,
  "name": "Synapse",
  "key": "",
  "version": "1.4.5",
  "description": "Synapse — 集提示词管理、对话采集、代码片段于一体的 AI 工具箱。覆盖 ChatGPT、Claude、Gemini、DeepSeek 等 12+ 平台，一键注入提示词、实时同步对话、生成长对话大纲导航。告别碎片化，让每一次 AI 交互都有迹可循。",
  "permissions": [
    "identity",
    "activeTab",
    "scripting",
    "contextMenus",
    "tabs",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://aistudio.google.com/*",
    "https://chat.deepseek.com/*",
    "https://www.kimi.com/*",
    "https://ying.baichuan-ai.com/*",
    "https://yuanbao.tencent.com/*",
    "https://tongyi.com/*",
    "https://chat.qwen.ai/*",
    "https://copilot.microsoft.com/*",
    "https://www.bing.com/*",
    "https://chat.mistral.ai/*",
    "https://chat.z.ai/*",
    "https://openrouter.ai/*",
    "https://www.doubao.com/*",
    "https://longcat.chat/*",
    "https://chat.inceptionlabs.ai/*",
    "https://grok.com/*",
    "https://agent.minimaxi.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://aistudio.google.com/*",
        "https://chat.deepseek.com/*",
        "https://www.kimi.com/*",
        "https://ying.baichuan-ai.com/*",
        "https://yuanbao.tencent.com/*",
        "https://tongyi.com/*",
        "https://chat.qwen.ai/*",
        "https://copilot.microsoft.com/*",
        "https://www.bing.com/*",
        "https://chat.mistral.ai/*",
        "https://chat.z.ai/*",
        "https://openrouter.ai/*",
        "https://www.doubao.com/*",
        "https://longcat.chat/*",
        "https://chat.inceptionlabs.ai/*",
        "https://grok.com/*",
        "https://agent.minimaxi.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "oauth2": {
    "client_id": "222966201720-gvmtavh87dngs814qeoalkii2guqufbt.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.profile",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/drive.file"
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Synapse",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "commands": {
    "save_selection": {
      "suggested_key": {
        "default": "Ctrl + Shift + S",
        "mac": "Command + Shift + S"
      },
      "description": "快速保存为提示词"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "content.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}